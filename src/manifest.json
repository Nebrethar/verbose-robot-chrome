{
  "name": "Bearded Avenger Client (CIFv3)",
  "short_name": "CIFv3",
  "version": "3.0.4",
  "manifest_version": 2,
  "description": "Client for the Collective Intelligence Framework",
  "browser_action": {
    "default_icon": "content/images/ciflogo.png",
	"default_popup": "content/html/popup.html"
  },
  "background": {
    "scripts": ["content/js/contextmenus.js"]
  },
  "icons": {
	"16": "content/images/ciflogo.png",
	"48": "content/images/ciflogo.png",
	"128": "content/images/ciflogo.png"
  },
  "options_page": "content/html/settings.html",
  "permissions": [ "http://*/*", "https://*/*", "contextMenus","tabs"],
  "omnibox": { "keyword": "cif" }
}
